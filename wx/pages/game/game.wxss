/* pages/game/game.wxss */
.card {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 150rpx;
  margin: 15rpx;
}

.red {
  background: lightcoral;
}

.green {
  background: lightgreen;
}

.blue {
  background: lightblue;
}

.card_row {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items: left;
  margin: 0 5%;
}

.card_container {
  margin: 15rpx;
  display:flex;
  flex-direction:column;
  justify-content: space-between;
  align-items: center
}
.navigate_area {
  display: flex;
  position: fixed;
  bottom: 0;
  padding: 5% 10%;
  width: 70%
}
.message {
  width: 100%;
  margin-top: 5%;
  white-space: pre-wrap;
  display: flex;
}
button {
  width: 400rpx;
}

