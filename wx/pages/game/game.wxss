.card {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 0;
}

.red {
  background: lightcoral;
}

.green {
  background: lightgreen;
}

.blue {
  background: lightblue;
}

.card_row {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin: 25rpx 0;
}

.card_container {
  margin: 5%;
  display:flex;
  flex-direction:column;
  justify-content: space-around
} 

